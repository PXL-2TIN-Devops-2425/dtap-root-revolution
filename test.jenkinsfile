pipeline {
    agent any
    environment{
        DOCKER_CREDS = credentials('677d51b6-cb01-4698-be13-fc7f2f76b162')
    }
    stages {
        stage ('cleanup'){
            steps{
                sh 'rm -rf *'
                sh 'docker rm -f $(docker ps -aq) || true'
                sh 'docker image prune -af'
                sh 'docker images'
                sh 'docker ps -a'
            }
        }
        stage('fetch app code') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', url: 'https://github.com/PXL-2TIN-DevOps-Resources/calculator-app-finished.git'
            }
        }
        stage ('Install dependencies'){
            steps{
                nodejs('testenvnode') {
                    sh 'npm install'
                }
            }
        }
        stage('Testing app') {
            steps {
                nodejs('testenvnode') {
                    sh 'npm test'
                }
                junit 'junit.xml'
            }
        }
        stage ('Build artifact'){
            steps{
                sh 'docker build -t tommyquatretempspxl/dtap .'
                sh 'docker images'
            }
        }
        stage ('Push artifact'){
            steps{
                sh 'docker login -u $DOCKER_CREDS_USR -p $DOCKER_CREDS_PSW'
                sh 'docker push tommyquatretempspxl/dtap:latest'
            }
        }
        stage ('deployment'){
            steps{
                sh 'docker image prune -af'
                sh 'docker run -d -p 3000:3000 tommyquatretempspxl/dtap:latest'
                sh 'docker ps'
            }
        }
        
    }
}
